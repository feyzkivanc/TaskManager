@model IEnumerable<WebApplication16.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Event</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                <a asp-action="AddorEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> New Event </a>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    <a asp-action="AddorEdit" asp-route-id="@item.EventID" class="btn btn-success btn-block d-sm-inline">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.EventID" class="btn btn-danger btn-block d-sm-inline" onclick="return confirm('Are you sure to delete this event?')">Delete</a>

                </td>
        </tr>
}
    </tbody>
</table>
